extends layout

block content
 h2.page-header Register
 p Please register using the form below
 if errors
  each error, i in errors
   div.alert.alert-danger #{error.msg}
 
 form(method='post' action='/users/register' enctype='multipart/form-data')
   .form-group
    label Name
    input.form-control(name='name',type='text',placeholder='Enter Name')
    .form-group
    label Email
    input.form-control(name='email',type='email',placeholder='Enter your email')
    .form-group
    label Username
    input.form-control(name='usr',type='text',placeholder='Enter username')
    .form-group
    label Password
    input.form-control(name='pwd',type='password',placeholder='Enter the password')
    .form-group
    label Confirm Password
    input.form-control(name='pwd2',type='password',placeholder='Enter the password again')
    .form-group
    label Profile Image
    input.form-control(name='dp',type='file')
   input.btn.btn-primary(type='submit',name='submit',value='Register')    

